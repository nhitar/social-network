html 
    head 
        meta(charset="utf-8")
        title Список друзей
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" crossorigin="anonymous")
        link(rel="stylesheet" href="/css/styles.css")
    body 
        h1.text-center Друзья пользователя #{user.profile.name} #{user.profile.surname}
        .container.p-4
            each friend in friends
                .user-card
                    .user-avatar
                        img(src=friend.profile.avatar, alt="Avatar", width="50")
                    .user-info
                        h5= friend.profile.name + ' ' + friend.profile.surname
                        p Email: #{friend.profile.email}
                        p Друзей: #{friend.friends.length}
