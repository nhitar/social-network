html 
    head 
        meta(charset="utf-8")
        title Список постов
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" crossorigin="anonymous")
        link(rel="stylesheet" href="/css/styles.css")
    body 
        h1.text-center Новости пользователя #{user.profile.name} #{user.profile.surname}
        .container.p-2
            each post in posts
                h5 #{post.authorId}
                h5 #{post.content}
                if post.photo
                    img(src=post.photo, alt="Post" width="400")
                h5 #{post.timestamp}
                h5 likes #{post.likes.length}