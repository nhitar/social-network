html 
  head 
    meta(charset="utf-8")
    title Список постов
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" crossorigin="anonymous")
    link(rel="stylesheet" href="/css/styles.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
  body 
    .container.p-4
      .row.justify-content-center
        .col-12.col-xl-6
          h1 
            i.fas.fa-newspaper.me-2
            | Новости пользователя #{user.profile.name} #{user.profile.surname}
          a.btn.btn-outline-primary(href=`/users`)
            i.fas.fa-arrow-left.me-2
            | Назад к профилю

          each post in posts
            .post-card
              .post-header
                .user-avatar
                  img(src=post.author.profile.avatar, alt="Avatar")
                .post-meta
                  h5 #{post.author.profile.name} #{post.author.profile.surname}
                  i.fas.fa-calendar-alt.me-2
                  | #{post.timestamp}
            
              .post-content.text-center
                p #{post.content}
                if post.photo
                  img.img-fluid.rounded.mb-3(src=post.photo, alt="Post image")
            
              .post-stats
                span.badge.bg-light.text-dark.me-2
                  i.fas.fa-heart.text-danger.me-2
                  | #{post.likes.length} лайков